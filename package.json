{
  "name": "s-language",
  "private": true,
  "bin": {
    "slang": "node build/command"
  },
  "main": "build/index.js",
  "module": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "cli": "ts-node src/command",
    "cli-debug": "node --inspect-brk build/command",
    "format": "prettier --single-quote --write '**/*.ts'",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@types/node": "^12.7.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typestrict": "1.0.2"
  },
  "dependencies": {
    "@types/jest": "^24.0.17",
    "chalk": "^2.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
